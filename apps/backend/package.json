    "lint": "eslint src --ext ts --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@langchain/core": "^0.3.42",
    "@langchain/groq": "^0.1.3",
    "@langchain/langgraph": "^0.2.51",
    "cors": "^2.8.5",
    "database": "workspace:*",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.39.1",
    "elevenlabs": "^1.52.0",
    "express": "^4.21.2",
    "groq": "^3.77.2",
    "langchain": "^0.3.19",
    "postgres": "^3.4.3",
    "shared": "workspace:*",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "ws": "^8.18.1",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "4.17.21",
    "@types/node": "20.16.11",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "drizzle-kit": "^0.30.4",
    "esbuild": "^0.25.0",
    "eslint": "^8.0.0",
    "tsx": "^4.19.1",
    "typescript": "5.6.3"
  }
